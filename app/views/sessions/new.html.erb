<div class="page-header">
  <h1 class="hleft">Logga in</h1>
</div>
<div class="row">
  <div class="span6 offset3">
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :username%>
      <%= f.text_field :username, style: "height: 40px" %>

      <%= f.label :password, "Lösenord" %>
      <%= f.password_field :password , style: "height: 40px"%>

      <%= f.submit "Logga in", class: "btn btn-large btn-primary" %>
    <% end %>

    <p>Ny användare? <%= link_to "Registrera dig nu!", signup_path %></p>
  </div>
</div>