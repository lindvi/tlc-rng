<div class="page-header">
  <h1 class="hleft">Registrering</h1>
</div>
<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :username %>
      <%= f.text_field :username, style: "height: 40px"%>

      <%= f.label :password, "Lösenord"%>
      <%= f.password_field :password, style: "height: 40px" %>

      <%= f.label :password_confirmation, "Upprepa lösenordet" %>
      <%= f.password_field :password_confirmation, style: "height: 40px" %>

      <%= f.submit "Skapa mitt konto", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>